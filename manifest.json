{
  "name": "Joblint",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Allows you to test tech job posts for issues with sexism, culture, expectations, and recruiter fails",
  "icons": {
    "128": "joblinticon.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "permissions": [
    "tabs",
    "activeTab"
  ]
}
